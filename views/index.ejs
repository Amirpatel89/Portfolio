		<div class="container">
			<div class="row">
				<h1 class="Contact-Me">Contact Me</h1>	
				<section id="Contact-Me" class="wrapper">     
		                <form action="/contact" method="post" id="myform">
		                    <div class="field col s6">
		                        <label for="name">Name</label>
		                        <input type="text" name="name" id="name" value="" maxlength="50" placeholder="Your name">
		                    </div>
		                    <div class="field col s6">
		                        <label for="email">Email</label>
		                        <input type="email" name="email" id="email" value="" maxlength="90" required="" placeholder="Your email">
		                    </div>
		                    <div class="field col s12">
		                        <label for="message">Message</label>
		                        <textarea name="message" id="message" rows="4" maxlength="300" required="" placeholder="Please write a brief message. I'm excited to hear from you!"></textarea>
		                    </div>
		                    <button class="send skill-btn" type="submit">Send</button>
		                    
		                </form>
